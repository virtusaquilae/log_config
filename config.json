{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "filename": "app_monitoring.log", 
            "maxBytes": 300000000,
            "backupCount": 3
        }
    },
    "loggers": {
        "monitoring": {
            "level": "DEBUG",
            "handlers": ["file"],
            "propagate": false
        }
    }
}
